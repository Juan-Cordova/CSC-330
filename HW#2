
import java.util.Scanner;


public class Main {

    public static void main(String[] args)
    {
        double temp;
        System.out.println("Type a Temp!");
        //Temperature t = new Temperature(25);

        Scanner keyboard = new Scanner(System.in);

        temp= keyboard.nextDouble();
        System.out.println("you entered "+temp);

        Temperature x = new Temperature(temp);

        System.out.println(x.celsius());
        System.out.println(" ");
        System.out.println(x.kelvin());

    }




}








